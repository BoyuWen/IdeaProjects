package stuff;

public class Stuff {
	//属性
	private String number;
	private String name;
	private int age;
	private double salary;
	private String ID;
	private double stutotal = 10;
	private int saltotal = 10000;
	//构造器
	public Stuff(String a,String b,int c) throws Exception{
		number = a;
		if(c>=18 && c<=60){
			age = c;
		}else if(c<18){
			throw new LowAgeException();
		}else{
			throw new HighAgeException();
		}
		if(b=="" || b==null){
			throw new BlankException();
		}else{
			name = b;
		}	
	}
	public Stuff(double d,String e) throws Exception{
		if(d < 600){
			throw new LowSalaryException();
		}else{
			salary = d;
		}
		ID = e;
	}
	//方法
	public void addSalary(double addSalary) throws Exception{
		if((salary+addSalary)*stutotal > saltotal){
			throw new HighSalaryException();
		}else{
			salary += addSalary;
		}
	}
	public void minusSalary(double minusSalary) throws Exception{
		if(salary-minusSalary < 600){
			throw new LowSalaryException();
		}else{
			salary -= minusSalary;
		}
	}
	public void showTotalSalary() throws Exception{
		if(stutotal == 0){
			throw new BlankException();
		}else{
			System.out.println("总工资："+saltotal);
		}
	}
	public void showTotalEmployee() throws Exception{
		if(stutotal == 0){
			throw new BlankException();
		}else{
			System.out.println("总工资："+saltotal);
		}
	}
}
